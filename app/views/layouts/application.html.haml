!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "rBus"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    <meta property="fb:app_id" content="73675367324" />
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-33006297-1']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    %form#feedback{:style => "position: absolute; right: 0px; top: 50px;background: #efefef; width: 300px; padding: 20px; border-radius: 10px; z-index: 100; display: none;", :action => feedback_path, :method => "post"}
      = csrf_meta_tag
      %label your email
      %input{:type => "text", :name => "email"}
      %label your feedback
      %textarea{:name => "body"}
      %input{:type => "submit", :value => "submit feedback"}

    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #wrap
      #main{:role => "main"}
        .container
          .content
            .row
              .span12
                = render 'layouts/messages'
                = yield
  %footer.footer{:style => "background: #A5DFEF"}
    .container{:style => "padding: 10px"}
      :plain
        <script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
        <script>
        new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 1,
        interval: 30000,
        width: 300,
        height: 300,
        theme: {
        shell: {
        background: '#d8f1f6',
        color: '#030303'
        },
        tweets: {
        background: '#bce7f5',
        color: '#0f0e0f',
        links: '#1e1ee6'
        }
        },
        features: {
        scrollbar: false,
        loop: false,
        live: false,
        behavior: 'all'
        }
        }).render().setUser('rbus_in').start();
        </script>
