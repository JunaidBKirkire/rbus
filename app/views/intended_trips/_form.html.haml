= semantic_form_for @intended_trip do |f|
  -if @intended_trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@intended_trip.errors.count, "error")} prohibited this intended_trip from being saved:"
      %ul
        - @intended_trip.errors.full_messages.each do |msg|
          %li= msg

  = f.input :from_stop_id, :as => :select, :collection => Hash[BusStop.all.map{|b| [b.name, b.id]}]
  = f.input :to_stop_id, :as => :select, :collection => Hash[BusStop.all.map{|b| [b.name, b.id]}]
  = f.input :on, :as => :radio, :collection => ["weekdays", "weekdays and saturday", "all days"]
  - unless current_user
    = f.semantic_fields_for :user do |u|
      = u.input :email
      
  = f.submit
  
